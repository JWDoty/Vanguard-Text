{
  "name": "vanguard-text",
  "version": "1.0.0",
  "description": "Transparent notepad by Vanguard DevLabs",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "author": "Vanguard DevLabs LLC",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.vanguarddevlabs.vanguardtext",
    "productName": "Vanguard Text",
    "copyright": "Copyright Â© 2024 Vanguard DevLabs LLC",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "YOUR_GITHUB_USERNAME",
      "repo": "Vanguard-Text"
    }
  }
}